<Window x:Class="GenericCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenericCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="300">

    <Window.Resources>
        <SolidColorBrush x:Key="numbersColor" Color="#444444"/>
        <SolidColorBrush x:Key="operatorsColor" Color="Purple"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="resultLabel" Content="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Grid.ColumnSpan="4"/>
        <Button x:Name="ACButton" Content="AC"
                Foreground="Black"
                Margin="5"
                Grid.Row="1"/>
        <Button x:Name="NegativeButton" Content="+/-"
                Foreground="Black"
                Margin="5"
                Grid.Row="1"
                Grid.Column="1"/>
        <Button x:Name="PercentangeButton" Content="%"
                Foreground="Black"
                Margin="5"
                Grid.Row="1"
                Grid.Column="2"/>
        <Button x:Name="DivideButton" Content="/"
                Click="OperationButton_Click"
                Background="{StaticResource operatorsColor}"
                Margin="5"
                Grid.Row="1"
                Grid.Column="3"/>
        <Button x:Name="SevenButton" 
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="7"
                Margin="5"
                Grid.Row="2"/>
        <Button x:Name="EightButton" Content="8"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="2"
                Grid.Column="1"/>
        <Button x:Name="NineButton" Content="9"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="2"
                Grid.Column="2"/>
        <Button x:Name="MultiplyButton" Content="*"
                Click="OperationButton_Click"
                Background="{StaticResource operatorsColor}"
                Margin="5"
                Grid.Row="2"
                Grid.Column="3"/>
        <Button x:Name="FourButton" Content="4"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="3"/>
        <Button x:Name="FiveButton" Content="5"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="3"
                Grid.Column="1"/>
        <Button x:Name="SixButton" Content="6"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="3"
                Grid.Column="2"/>
        <Button x:Name="MinusButton" Content="-"
                Click="OperationButton_Click"
                Background="{StaticResource operatorsColor}"
                Margin="5"
                Grid.Row="3"
                Grid.Column="3"/>
        <Button x:Name="OneButton" Content="1"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="4"/>
        <Button x:Name="TwoButton" Content="2"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="4"
                Grid.Column="1"/>
        <Button x:Name="ThreeButton" Content="3"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="4"
                Grid.Column="2"/>
        <Button x:Name="PlusButton" Content="+"
                Click="OperationButton_Click"
                Background="{StaticResource operatorsColor}"
                Margin="5"
                Grid.Row="4"
                Grid.Column="3"/>
        <Button x:Name="ZeroButton" Content="0"
                Click ="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="5"
                Grid.ColumnSpan="2"/>
        <Button x:Name="DecimalButton" Content="."
                Click="DecimalButton_Click"
                Background="{StaticResource numbersColor}"
                Margin="5"
                Grid.Row="5"
                Grid.Column="2"/>
        <Button x:Name="EqualButton" Content="="
                Background="{StaticResource operatorsColor}"
                Margin="5"
                Grid.Row="5"
                Grid.Column="3"/>
    </Grid>
</Window>